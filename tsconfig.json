{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@rn/*": ["src/rn/*"],
      "@tui/*": ["src/tui/*"]
    }
  },
  "include": [
    "src/shared/**/*.ts",
    "src/shared/**/*.tsx",
    "src/rn/**/*.ts",
    "src/rn/**/*.tsx",
    "src/tui/**/*.ts",
    "src/tui/**/*.tsx"
  ],
  "exclude": ["**/node_modules", "src/web"]
}
