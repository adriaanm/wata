    "ink-spinner": "^5.0.0",
    "react": "^18.3.1",
    "matrix-js-sdk": "^34.11.0",
    "keytar": "^7.9.0",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "typescript": "^5.7.3",
    "tsx": "^4.19.2",
    "@ink-testing-library/react": "^1.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14"
  }
