{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@rn/*": ["src/rn/*"],
      "@tui/*": ["src/tui/*"]
    }
  },
  "files": [
    "src/shared/lib/reedsolomon.es.d.ts"
  ],
  "include": ["src/**/__tests__/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
